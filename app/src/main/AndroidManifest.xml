<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ro.poli.sma.proiectsma">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProiectSMA">
        <activity
            android:name=".pages.GameActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_game"
            android:theme="@style/Theme.ProiectSMA.Fullscreen"></activity>
        <activity
            android:name=".pages.PersonalPage"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_personal_page"
            android:theme="@style/Theme.ProiectSMA.Fullscreen" />
        <activity
            android:name=".pages.MainMenu"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_main_menu"
            android:theme="@style/Theme.ProiectSMA.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>